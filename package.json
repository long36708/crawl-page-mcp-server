{
  "name": "crawl-page-mcp-server",
  "version": "1.0.5",
  "description": "MCP server for crawling web pages and converting to markdown",
  "main": "dist/index.js",

  "bin": {
    "crawl-page-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "npm run build:bundle",
    "build:tsc": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/index.js --external:@modelcontextprotocol/sdk && node scripts/add-shebang.js",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "debug": "node test/debug-server.js",
    "inspector": "./start-inspector-basic.sh",
    "inspector:smart": "./start-inspector-smart.sh",
    "inspector:simple": "npx @modelcontextprotocol/inspector",
    "test": "node test/quick-test.mjs",
    "test:crawl": "node test/quick-test.mjs",
    "test:performance": "node test/performance-test.js",
    "test:large": "node test/test-large-content.mjs",
    "debug:build": "npm run build && npm run debug",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "web-crawling",
    "markdown",
    "scraping"
  ],
  "author": "longmo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/long36708/crawl-page-mcp-server.git"
  },
  "files": [
    "dist/",
    "test/",
    "README.md",
    "docs/",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "turndown": "^7.1.2",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.4",
    "esbuild": "^0.25.9",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
