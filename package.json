{
  "name": "crawl-page-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for crawling web pages and converting to markdown",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "crawl-page-mcp": "dist/index.js",
    "crawl-page-debug": "debug-server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "debug": "node debug-server.js",
    "inspector": "npx @modelcontextprotocol/inspector",
    "inspector:config": "npx @modelcontextprotocol/inspector --config inspector-config.json",
    "test": "jest",
    "test:crawl": "node test-crawl.js",
    "debug:build": "npm run build && npm run debug",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build"
  },
  "keywords": ["mcp", "web-crawling", "markdown", "scraping"],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/crawl-page-mcp-server.git"
  },
  "files": [
    "dist/",
    "debug-server.js",
    "README.md",
    "docs/",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "turndown": "^7.1.2",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.4",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}